<h1>Tasks for today</h1>
<ul>
<% @tasks.each do |task| %>
<p><%= check_box_tag 'done', '1', task.completed, class: "checkbox" %>
 <%=link_to task.title, task_path(task) %> | <%=link_to "Delete", task_path(task), method: :delete,
            data: { confirm: "Are you sure?" } %>  </p>
<% end %>
</ul>


<%= link_to "Add a new task", new_task_path%>